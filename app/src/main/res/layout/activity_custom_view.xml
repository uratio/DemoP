<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CustomViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/style_custom_view_title_text"
            android:text="自定义阴影效果：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="#76a8f1"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <View
                    android:id="@+id/view_shape1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ff00f1" />

                <View
                    android:id="@+id/view_shape2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <View
                    android:id="@+id/view_shape3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_bg_gradient" />

                <View
                    android:id="@+id/view_shape4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/icon_service_header" />

            </android.support.v7.widget.CardView>

            <com.uratio.demop.view.shadow.ShadowLayout
                android:id="@+id/shadow_layout"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                app:sdl_background="@drawable/shape_bg_gradient"
                app:sdl_radius="15dp" />

            <com.uratio.demop.view.shadow.ShadowViewCard
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                app:shadowRadius="10"
                app:shadowRound="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/sb_depth"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:max="15"
                android:min="1" />

            <TextView
                android:id="@+id/tv_depth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_4"
                android:layout_margin="20dp"
                android:text="投影深度（1~15）" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/sb_alpha"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:min="1" />

            <TextView
                android:id="@+id/tv_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_4"
                android:layout_margin="20dp"
                android:text="投影透明度（1~255）" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#EEE" />

        <TextView
            style="@style/style_custom_view_title_text"
            android:text="自适应宽度缩放文字大小：" />

        <TextView
            android:id="@+id/tv_auto_text"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="文字大小"
            android:textSize="@dimen/font_20"
            android:autoSizeMaxTextSize="62sp"
            android:autoSizeMinTextSize="4sp"
            android:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="62sp"
            app:autoSizeMinTextSize="4sp"
            app:autoSizeTextType="uniform"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#EEE" />
    </LinearLayout>
</ScrollView>